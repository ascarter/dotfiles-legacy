[gui]
	fontui = -family \"Lucida Grande\" -size 11 -weight normal -slant roman -underline 0 -overstrike 0
	fontdiff = -family Menlo -size 12 -weight normal -slant roman -underline 0 -overstrike 0
[color]
	ui = auto
[color "branch"]
  current = green bold
  local = cyan bold
  remote = cyan
[color "diff"]
  meta = black bold
  frag = yellow
  old = cyan
  new = green
[color "status"]
  added = cyan bold
  changed = cyan bold
  untracked = green bold
[core]
	excludesfile = ~/.gitignore
[pack]
	threads = 0
[init]
	templatedir = ~/.git_template
[difftool]
	prompt = false
[difftool "bbdiff"]
	cmd = /usr/local/bin/bbdiff --wait --resume "$LOCAL" "$REMOTE"
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[instaweb]
	httpd = webrick	
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustExitCode = true
[merge]
	tool = Kaleidoscope
	prompt = false
	renormalize = true
	keepBackup = true
[diff]
	tool = Kaleidoscope
[alias]
	changes = diff --name-status -r
	ctags = '!${PWD}/.git/hooks/ctags'
	datetag = !git tag `date \"+%Y%m%d%H%M\"`
	diffstat = diff --stat -r
	gdiff = difftool --gui --no-prompt
	gitkconflict = !gitk --left-right HEAD...MERGE_HEAD
	k = !gitk
	logx = log --graph --decorate --all --oneline
	tower = !sh -c 'gittower'
	whatis = show -s --pretty='tformat:%h (%s, %ad)' --date=short
	who = shortlog -s --
	whois = !sh -c 'git log -i -1 --pretty=\"format:%an <%ae>\n\" --author=\"$1\"' -
	x = !gitx
[credential]
	helper = osxkeychain
