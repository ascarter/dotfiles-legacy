emulate -L zsh

# Display motd
#
#   show-motd [mode]
#
#   mode == off|once|login|now
#
#   If no mode provided, use last setting
#

# Initialize with existing WTTR_PARAMS
local wttr_params=$WTTR_PARAMS

# WTTR_PARAMS is space-separated URL parameters, many of which are single characters that can be
# lumped together. For example, "F q m" behaves the same as "Fqm".
if [[ -z "$WTTR_PARAMS" ]]; then
  # Form localized URL parameters for curl
  if [[ -t 1 ]] && [[ "$(tput cols)" -lt 125 ]]; then
      echo "Setting narrow $(tput cols)"
      wttr_params+='n'
  fi 2> /dev/null
  for _token in $( locale LC_MEASUREMENT ); do
    case $_token in
      1) wttr_params+='m' ;;
      2) wttr_params+='u' ;;
    esac
  done 2> /dev/null
  unset _token
  # Set quiet options
  wttr_params+='F'
  wttr_params+='q'
fi

local location="${1// /+}"
if [ $# -gt 0 ]; then
  shift
fi

local args=""
for p in $wttr_params "$@"; do
  args+=" --data-urlencode $p"
done
curl -fGsS -H "Accept-Language: ${LANG%_*}" $args --compressed "wttr.in/${location}"
