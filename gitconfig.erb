[user]
	name = <%= prompt_for_value("name") %>
	email = <%= prompt_for_value("email") %>
[gui]
	fontui = -family \"Lucida Grande\" -size 11 -weight normal -slant roman -underline 0 -overstrike 0
	fontdiff = -family Menlo -size 12 -weight normal -slant roman -underline 0 -overstrike 0
[color]
	ui = auto
[color "branch"]
  current = green bold
  local = cyan bold
  remote = cyan
[color "diff"]
  meta = black bold
  frag = yellow
  old = cyan
  new = green
[color "status"]
  added = cyan bold
  changed = cyan bold
  untracked = green bold
[core]
	excludesfile = ~/.gitignore
[pack]
	threads = 0
[github]
	user = <%= prompt_for_value("github_user") %>
	token = <%= prompt_for_value("github_token") %>
[difftool]
	prompt = false
[difftool "bbdiff"]
	cmd = /usr/local/bin/bbdiff --wait --resume "$LOCAL" "$REMOTE"
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
[merge]
	tool = Kaleidoscope
	prompt = false
	renormalize = true
	keepBackup = true
[diff]
	tool = Kaleidoscope
[alias]
	k = !gitk
	x = !gitx
	gdiff = difftool --gui --no-prompt
	changes = diff --name-status -r
	diffstat = diff --stat -r
	who = shortlog -s --
	whois = "!sh -c 'git log -i -1 --pretty=\"format:%an <%ae>\n\" --author=\"$1\"' -"
	whatis = show -s --pretty='tformat:%h (%s, %ad)' --date=short
	gitkconflict = !gitk --left-right HEAD...MERGE_HEAD
	logx = log --graph --decorate --all --oneline
	datetag = !git tag `date \"+%Y%m%d%H%M\"`
