<%
  name = prompt_for_value("name") if name.nil?
  email = prompt_for_value("email") if email.nil?
  github_user = prompt_for_value("GitHub user") if github_user.nil?
  github_token = prompt_for_value("GitHub token") if github_token.nil?
%>
[user]
	name = <%= name %>
	email = <%= email %>
[gui]
	fontui = -family \"Lucida Grande\" -size 11 -weight normal -slant roman -underline 0 -overstrike 0
	fontdiff = -family Menlo -size 11 -weight normal -slant roman -underline 0 -overstrike 0
[color]
	ui = auto
[core]
	excludesfile = ~/.gitignore
[pack]
	threads = 0
[github]
	user = <%= github_user %>
	token = <%= github_token %>
[merge]
	tool = opendiff
	prompt = false
	renormalize = true
[diff]
	tool = opendiff
	prompt = false
[alias]
	k = !gitk
	x = !gitx
	gdiff = difftool --gui --no-prompt
	changes = diff --name-status -r
	diffstat = diff --stat -r
	who = shortlog -s --
	whois = "!sh -c 'git log -i -1 --pretty=\"format:%an <%ae>\n\" --author=\"$1\"' -"
	whatis = show -s --pretty='tformat:%h (%s, %ad)' --date=short
	gitkconflict = !gitk --left-right HEAD...MERGE_HEAD
	logx = log --graph --decorate --all --oneline
[difftool]
	prompt = false
[difftool "bbdiff"]
	cmd = /usr/local/bin/bbdiff --wait --resume "$LOCAL" "$REMOTE"
