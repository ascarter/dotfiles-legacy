#  -*- mode: unix-shell-script; -*-

# ascarter zsh prompt theme
# Andrew Carter <ascarter@icloud.com>
# 
# Simple prompt
#

prompt_ascarter_help () {
  cat <<'EOH'

Simple prompt

EOH
}

prompt_ascarter_setup () {
  PROMPT='%n@%m:%B%3~%b%# '
  PROMPT4='+%N:%i:%_>'
  unset RPROMPT
  prompt_opts=( cr percent subst )
}

prompt_ascarter_setup "$@"
